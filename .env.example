# 大模型配置
LLM_PROVIDER=openai
LLM_API_KEY=your_api_key_here
LLM_MODEL=gpt-4
LLM_BASE_URL=
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# 数据库配置
DATABASE_URL=sqlite:///./data/novel_assistant.db

# 向量数据库配置
VECTOR_STORE_PATH=./data/vector_store

# Redis配置
REDIS_URL=redis://localhost:6379/0

# 应用配置
APP_ENV=development
LOG_LEVEL=INFO
BACKEND_PORT=8000
FRONTEND_PORT=3000
CORS_ORIGINS=http://localhost:3000

# 功能开关
AUTO_SUMMARIZE=true
AUTO_VALIDATE=true
EPHEMERAL_CACHE_TTL=604800

# 安全配置
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_HOURS=24

# 性能配置
RETRIEVAL_TOP_K=10
MAX_CHAPTER_LENGTH=50000